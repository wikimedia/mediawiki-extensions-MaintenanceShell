{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"jQuery": false
	},
	"rules": {
		"no-jquery/no-global-selector": "warn",
		"no-jquery/no-trim": "warn",
		"no-jquery/no-parse-html-literal": "warn",
		"no-jquery/no-sizzle": "off",
		"prefer-const": "warn",
		"no-jquery/no-done-fail": "warn"
	}
}
